#include <iostream>

using namespace std;

void Input(int n, int a[100][100])
{
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++) {
            cout << "A[" << i << "][" << j << "]: ";
            cin >> a[i][j];
        }
}

void Matr(int a[100][100], int n)
{
    float w0[100], w[100], sum = 0, w0norm[100], eps, d, d0;
    w0[0] = 1;
    for (int i = 1; i < n; i++)
        w0[i] = 0;
    do
    {
        for (int i = 0; i < n; i++)
            sum += w0[i] * w0[i];
        d0 = sqrt(sum);
        for (int i = 0; i < n; i++)
            w0norm[i] = w0[i] / d0;
        for (int i = 0; i < n; i++)
        {
            w[i] = 0;
            for (int j = 0; j < n; j++)
                w[i] += a[i][j] * w0norm[j];
        }
        sum = 0;
        for (int i = 0; i < n; i++)
            sum += w[i] * w[i];
        d = sqrt(sum);
        eps = abs(d - d0);
        for (int i = 0; i < n; i++)
            w0[i] = w[i];
        sum = 0;
    } while (eps > 1e-5);
    cout << endl << "Матрица: " << endl;
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++)
            cout << a[i][j] << " ";
        cout << endl;
    }
    cout << endl << "L = " << d << endl;
}

int main()
{
    setlocale(LC_ALL, "rus");
    int n, a[100][100];
    cout << "Размерность = ";
    cin >> n;
    Input(n,a);
    Matr(a, n);
    cin.get();
}
